
<div class="row">
	<div class="span10 offset1">
		<h2>Sign In</h2>
		
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), 
					html: {class: "form-horizontal"}) do |f| %>
					
			  <div class="control-group" label="email" id="email">
    			<%= f.label :email, class: 'control-label' %>
    			<div class="controls">
    				<%= f.email_field :email %>
			  	</div>
  			  </div>
			
			  <div class="control-group" label="password" id="password">
    			<%= f.label :password, class: 'control-label' %>
    			<div class="controls">
    				<%= f.password_field :password %>
			  	</div>
  			  </div>
			
			  <% if devise_mapping.rememberable? -%>
			   
			    	<div class="controls">
			    		<%= f.check_box :remember_me %><br>
			    		<%= f.label :remember_me %>
			    	</div>		
	
			  <% end -%>
			
			  <div class="form-actions" label="Sign in" id="Sign in" ><%= f.submit "Sign in" %></div>
			<% end %>
			
			<%= render "devise/shared/links" %>

	</div>
</div>	